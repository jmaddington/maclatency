{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/set-version.sh ${nextRelease.version}",
        "publishCmd": "./scripts/build-release.sh ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "MacPing.xcodeproj/project.pbxproj"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "release/MacPing-*.dmg",
            "label": "MacPing-${nextRelease.version}.dmg"
          },
          {
            "path": "release/MacPing-*.zip",
            "label": "MacPing-${nextRelease.version}.zip"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ]
  ]
}
